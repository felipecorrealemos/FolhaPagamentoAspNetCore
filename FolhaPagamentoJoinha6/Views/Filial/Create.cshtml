@model FolhaPagamentoJoinha6.Models.EmpresaCliente

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Filial</h4>
<hr />
<div class="row ">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden class="form-group">
                <label asp-for="idEmpresa" class="control-label"></label>
                <input asp-for="idEmpresa" class="form-control" />
                <span asp-validation-for="idEmpresa" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="form-group col-md-6 col-12">
                    <label asp-for="razaoSocial" class="control-label"></label>
                    <input asp-for="razaoSocial" class="form-control" disabled />
                </div>

                <div class="form-group col-md-6 col-12">
                    <label asp-for="cnpj" class="control-label"></label>
                    <input asp-for="cnpj" class="form-control" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="form-group col-md-6 col-12">
                    <label asp-for="nomeFantasia" class="control-label"></label>
                    <input asp-for="nomeFantasia" class="form-control" />
                    <span asp-validation-for="nomeFantasia" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 col-12">
                    <label asp-for="apelido" class="control-label"></label>
                    <input asp-for="apelido" class="form-control" />
                    <span asp-validation-for="apelido" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group col-md-6 col-12 mb-3">
                <label asp-for="empresaMae" class="control-label"></label>
                <input asp-for="empresaMae" class="form-control" />
                <span asp-validation-for="empresaMae" class="text-danger"></span>
            </div>

            <div class="form-group col-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ehMatriz" /> @Html.DisplayNameFor(model => model.ehMatriz)
                </label>
            </div>

            <div class="form-group col-md-6 col-12 mb-3">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group col-12 mb-3">
                <label asp-for="observacao" class="control-label"></label>
                <textarea asp-for="observacao" class="form-control"></textarea>
                <span asp-validation-for="observacao" class="text-danger"></span>
            </div>

            <div class="form-group mt-5 mb-5">

                <a class="btn btn-secondary" asp-controller="Empresa" asp-action="Index">Back to List</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>

            <partial name="_FocusInput-btnVoltarValidade">
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
