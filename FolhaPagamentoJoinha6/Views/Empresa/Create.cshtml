@model FolhaPagamentoJoinha6.Models.Filial

@{
    ViewData["Title"] = "Create";
    var filial = ViewData["Filial"] as Filial;
}

<h1 class="animate__animated animate__fadeInLeft">Create</h1>
<h4 class="animate__animated animate__fadeInLeft">EmpresaCliente</h4>

<div class="mt-3">
    <form asp-action="Salvar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div hidden class="form-group">
            <label asp-for="idFilial" class="control-label"></label>
            <input asp-for="idFilial" class="form-control" value="@(filial?.idFilial ?? null)" />
            <span asp-validation-for="idFilial" class="text-danger"></span>
        </div>
        <div hidden class="form-group">
            <label asp-for="idEmpresa" class="control-label"></label>
            <input asp-for="idEmpresa" class="form-control" value="@(filial?.idEmpresa ?? null)" />
            <span asp-validation-for="idEmpresa" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label asp-for="razaoSocial" class="control-label"></label>
                <input asp-for="razaoSocial" class="form-control" maxlength="50" value="@(filial?.razaoSocial ?? "")" />
                <span asp-validation-for="razaoSocial" class="text-danger"></span>
            </div>
            <div class=" col-md-6">
                <label asp-for="nomeFantasia" class="control-label"></label>
                <input asp-for="nomeFantasia" class="form-control" maxlength="50" value="@(filial?.nomeFantasia ?? "")" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="form-group col-md-6">
                <label asp-for="cnpjBase" class="control-label"></label>
                <input asp-for="cnpjBase" class="form-control" maxlength="50" value="@(filial?.cnpjBase ?? "")" />
                <span asp-validation-for="cnpjBase" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" maxlength="50" value="@(filial?.email ?? "")" />
            </div>
        </div>

        <div class="form-group col-md-8 mb-3">
            <label asp-for="observacoes" class="control-label"></label>
            <textarea name="observacoes" class="form-control" rows="3" maxlength="500">@((filial?.observacoes) ?? "")</textarea>
        </div>

        <div class="form-group mt-5 mb-5">
            <button class="btn btn-secondary" formaction="@Url.Action("Index")" onclick="voltar()">Back to List</button>
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
        <partial name="_FocusInput-btnVoltarValidade">

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
