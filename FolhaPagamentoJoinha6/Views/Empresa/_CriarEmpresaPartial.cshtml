@model FolhaPagamentoJoinha6.Models.EmpresaCliente

@{
    ViewData["Title"] = "Create";
    var empresa = ViewData["Empresa"] as EmpresaCliente;
}

<div hidden class="form-group">
    <input asp-for="empresaMae" hidden value="@(empresa?.empresaMae)" />

    <label asp-for="empresaId" class="control-label"></label>
    <input asp-for="empresaId" class="form-control" value="@(empresa?.empresaId)" />
</div>

<div class="row mb-3">
    <div class="form-group col-md-6 col-12">
        <label asp-for="razaoSocial" class="control-label"></label>
        <input asp-for="razaoSocial" maxlength="64" placeholder="ex: Botica Comercial Farmaceutica LTDA – O Boticário max:64" class="form-control" value="@((empresa?.razaoSocial) ?? "")" />
        <span asp-validation-for="razaoSocial" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6 col-12">
        <label asp-for="cnpj" class="control-label"></label>
        <input asp-for="cnpj" maxlength="14" class="form-control" value="@((empresa?.cnpj) ?? "")" />
        <span asp-validation-for="cnpj" class="text-danger"></span>
    </div>
</div>

<div class="row mb-3">
    <div class="form-group col-md-6 col-12">
        <label asp-for="nomeFantasia" class="control-label"></label>
        <input asp-for="nomeFantasia" maxlength="128" class="form-control" value="@((empresa?.nomeFantasia) ?? "")" />
    </div>

    <div class="form-group col-md-6 col-12">
        <label asp-for="apelido" class="control-label"></label>
        <input asp-for="apelido" maxlength="64" class="form-control" value="@((empresa?.apelido) ?? "")" />
    </div>
</div>

<div class="row mb-3">
    <div class="form-group col-md-6 col-12">
        <label asp-for="telefone" class="control-label"></label>
        <input asp-for="telefone" maxlength="14" class="form-control" value="@((empresa?.telefone) ?? "")" />
        
    </div>

    <div class="form-group col-md-6 col-12">
        <label asp-for="email" class="control-label"></label>
        <input asp-for="email" maxlength="128" class="form-control" value="@((empresa?.email) ?? "")" />
    </div>
</div>

<div class="form-group row mb-3">
    <label class="control-label col-2">ehMatriz?</label>
    <input name="ehMatriz" type="checkbox" checked="checked" value="true" hidden />
    <input class="form-check-input form-group col-1" disabled type="checkbox" checked="checked" />
</div>

<div class="form-group row col-12 mb-3">
    <label asp-for="observacao" class="control-label"></label>
    <!--Html.TextAreaFor(model => model.observacao, new { class = "form-control", rows = "15" })-->
    <textarea name="observacao" rows="3" maxlength="255" class="form-control">@((empresa?.observacao) ?? "")</textarea>
</div>

